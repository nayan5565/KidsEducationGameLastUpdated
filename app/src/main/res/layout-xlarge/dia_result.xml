<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="650dp"
    android:layout_gravity="center"
    android:background="@drawable/level_result_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBangla"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bangl_button_text"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/txtBanglaPoint"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBanglaMa"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bangla_math_btn_text"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/txtBanglaMathPoint"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEnglish1"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/english_button"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/txtEnglishPoint"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMath1"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/math_button"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/txtMathPoint"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:text="0"
            android:textSize="50dp" />
    </LinearLayout>

</LinearLayout>