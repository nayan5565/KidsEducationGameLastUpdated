<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dia_LenearLayout"
    android:layout_width="700dp"
    android:layout_height="900dp"
    android:layout_gravity="center"
    android:background="@drawable/red_panel"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dia_level_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:text="Level Cleared"
            android:textColor="#fff"
            android:textSize="70dp" />


    </LinearLayout>
    <!--<TextView-->
    <!--android:id="@+id/txtLevelBestPoint"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:textSize="35dp"-->
    <!--android:text="best" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/txtLevelPoint"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/star_4" />

        <TextView
            android:id="@+id/txtLevelScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="10dp"
            android:text="Score"
            android:textColor="#fff"
            android:textSize="85dp" />

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="490dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="35dp"
            android:background="@drawable/facebook" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLevelMenu"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="55dp"
            android:layout_weight="1"
            android:src="@drawable/menu_btn" />

        <ImageView
            android:id="@+id/btnLevelReload"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/reload_btn" />

        <ImageView
            android:id="@+id/imgLevelForward"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            android:src="@drawable/forward_btn_red" />

    </LinearLayout>


</LinearLayout>