<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/setting_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Sound "
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtContuctUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:text="Contuct Us "
            android:textColor="#fff"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSoundOnOf"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/on" />

        <Button
            android:id="@+id/btnContuctUs"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/contact_btn"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/cancel_button" />

        <ImageView
            android:id="@+id/btnOk"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ok_button" />


    </LinearLayout>


</LinearLayout>