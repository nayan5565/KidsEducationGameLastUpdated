<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"

    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtGameNames"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Game Names"
            android:textSize="30dp" />
    </LinearLayout>

    <!--Middle part stating point-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <ImageView
                android:id="@+id/imgCloud1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cloud1" />

            <ImageView
                android:id="@+id/imgCloud2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cloud2" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/frmBangla"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/dp20">

                    <ImageView
                        android:id="@+id/btnBangla"
                        android:layout_width="240dp"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/bangl_button_text" />

                    <TextView
                        android:id="@+id/txtSub"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="right"
                        android:background="@drawable/starr"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#f00"
                        android:textStyle="bold" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/btnBanglaMath"
                        android:layout_width="240dp"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/bangla_math_btn_text" />

                    <TextView
                        android:id="@+id/txtBanglaMath"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="right"
                        android:background="@drawable/starr"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#f00"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/btnEnglish"
                        android:layout_width="240dp"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/english_button"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/txtEnglish"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="right"
                        android:background="@drawable/starr"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#f00"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/btnMath"
                        android:layout_width="240dp"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/math_button"
                        android:textColor="#FFFFFF"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtMath"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="right"
                        android:background="@drawable/starr"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#f00"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </FrameLayout>

            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

    <!--End Part String Point-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnResult"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/btnSetting"
                android:layout_marginLeft="33dp"
                android:background="@drawable/leaderboardbtn" />

            <Button
                android:id="@+id/btnSetting"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/settings" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
