<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#777"
                android:endColor="#777"
                android:startColor="#444" />
            <size
                android:width="15dp"
                android:height="15dp" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <color android:color="#f00" />
                </item>
                <item
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp">
                    <shape>
                        <gradient
                            android:angle="-90"
                            android:centerColor="#3F3FFF"
                            android:endColor="#1919FF"
                            android:startColor="#7F7FFF" />
                        <corners android:radius="4dp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>